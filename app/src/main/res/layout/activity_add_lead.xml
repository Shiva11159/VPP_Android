            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:id="@+id/txtselectproduct"
                android:fontFamily="@font/lbold"
                android:padding="5dp"
                android:text="Select Product"
                android:textColor="@color/black"
                android:textSize="15dp"
                />


            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_input_name"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/ventura_color"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/chk3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNote"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lreg"
                android:textColor="@color/gray700"
                android:text="Demat and trading account" />

            <CheckBox
                android:id="@+id/chk4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chk1"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/lreg"
                android:textColor="@color/gray700"
                android:text="Sub partner" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_input_city"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="5dp"

                android:visibility="gone"
                android:background="@color/colour_new_button"
                android:gravity="center"
                android:paddingLeft="@dimen/dimen_10"
                android:paddingRight="@dimen/dimen_10"
                android:text="Select Products"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/list_prod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn1"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:textSize="15sp"
                android:textStyle="normal">

            </TextView>



