<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray50"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray50"
            android:gravity="center"
            android:padding="16dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    fancy:cardBackgroundColor="@color/white"
                    android:layout_marginEnd="5dp"
                    fancy:cardElevation="5dp"
                    android:layout_marginBottom="5dp"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:layout_margin="5dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/client_linearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_16"
                            android:orientation="vertical">
                            <!--   android:text="BHARATI"-->
                            <!--   android:text="bharati@1234"-->


                            <!--                    vsl25-->
                            <!--                    trygghet@123-->

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="12dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/lbold"
                                android:textColor="@color/venturanew"

                                android:padding="5dp"
                                android:text="Pan Verification"
                                android:textSize="20dp" />

                            <EditText
                                android:id="@+id/edt_pan_no"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="25dp"
                                android:layout_weight="1"
                                android:background="@drawable/selector"
                                android:fontFamily="@font/opensans_regular"
                                android:hint="Enter PAN No"
                                android:inputType="textCapCharacters"
                                android:padding="10dp"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/txtName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/btn_login"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/opensans_regular"
                                android:gravity="center"
                                android:textSize="14dp"
                                android:visibility="gone" />

                            <mehdi.sakout.fancybuttons.FancyButton
                                android:id="@+id/btnProceedPAN"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="15dp"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:paddingRight="20dp"
                                android:paddingBottom="10dp"
                                fancy:fb_borderColor="#FFFFFF"
                                fancy:fb_borderWidth="1dp"
                                fancy:fb_defaultColor="@color/venturanew"
                                fancy:fb_focusColor="#9bd823"
                                fancy:fb_iconPosition="left"
                                fancy:fb_radius="30dp"
                                fancy:fb_text="Proceed"
                                fancy:fb_textColor="#FFFFFF" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lbold"
                                android:paddingTop="10dp"
                                android:paddingLeft="10dp"
                                android:id="@+id/txt_login"
                                android:visibility="gone"
                                android:textColor="@color/ventura_color"
                                android:paddingRight="10dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Please Login"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone">

                </ProgressBar>

            </RelativeLayout>


            <ImageView
                android:id="@+id/profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-50dp"
                android:background="@drawable/round_background1"
                android:padding="15dp"
                android:src="@drawable/vpp_logo" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="35dp"

            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            android:src="@drawable/alertlogo"></ImageView>


        <TextView
            android:id="@+id/txt_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text=""
            android:gravity="right"
            android:textColor="@color/gray900"
            android:layout_margin="10dp"
            android:fontFamily="@font/lreg"

            android:layout_gravity="left"
            android:layout_marginTop="50dp"
            ></TextView>

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>