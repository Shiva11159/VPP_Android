<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.application.vpp.activity.Dashboard">

    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar"
        android:visibility="gone"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageButton
                android:layout_width="30.0dip"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:backgroundTint="@color/white"
                android:src="@drawable/rupee"
                app:tint="@color/white"></ImageButton>

            <TextView
                android:id="@+id/toolbartextviewfrom_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration Fee"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_20dp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_margin="5dp"
        app:cardElevation="1dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <LinearLayout
                android:id="@+id/linearvisiblestatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_version"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text=""
                        android:gravity="right"
                        android:textColor="@color/gray900"
                        android:layout_margin="10dp"
                        android:fontFamily="@font/lreg"

                        android:layout_gravity="left"
                        android:layout_marginTop="50dp"
                        ></TextView>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:id="@+id/image"
                        android:layout_gravity="left"
                        android:src="@drawable/alertlogo">
                    </ImageView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:backgroundTint="@color/black"
                                android:padding="10dp"
                                android:src="@drawable/paynow"
                                app:tint="@color/black" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/gray50" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:id="@+id/txt_title"
                                android:textColor="@color/venturanew"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:fontFamily="@font/lbold"
                                android:textSize="15dp"
                                android:text=""/>



                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="sans-serif-condensed"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:background="@color/gray50"
                        android:gravity="center" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardBackgroundColor="@color/gray200"

                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbar"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:id="@+id/lin1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/editText_Vppid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:hint="Enter VPPID"
                                android:padding="10dp"
                                android:textAllCaps="true"
                                android:visibility="gone">

                            </EditText>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:padding="5dp"
                                tools:context=".Activity">

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/black" />

                                <TextView
                                    android:id="@+id/mobileNo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:fontFamily="@font/lreg"
                                    android:text="UPI ID :"
                                    android:textColor="@color/venturanew"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/txtupiid"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/lreg"
                                    android:gravity="right"
                                    android:text="VENTURA72924@ICICI"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/graph_indicator" />

                            <LinearLayout
                                android:id="@+id/R4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"

                                android:padding="5dp">

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/black" />

                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="7dp"
                                    android:layout_weight="1"

                                    android:fontFamily="@font/lreg"
                                    android:text="BENEFICIARY NAME:"
                                    android:textColor="@color/venturanew"

                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/txt_ben_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="7dp"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/lreg"
                                    android:gravity="right"
                                    android:text="VENTURA SECURITIES LTD"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/graph_indicator" />

                            <LinearLayout
                                android:id="@+id/R5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/black" />

                                <TextView
                                    android:id="@+id/bank"
                                    style="@style/lumpsumLeft"
                                    android:layout_weight="0.5"
                                    android:text="BANK ACC NO :"
                                    android:textColor="@color/venturanew"
                                    android:fontFamily="@font/lreg"

                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/txt_bankacc"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="2.5"
                                    android:fontFamily="@font/lreg"
                                    android:gravity="right"
                                    android:text="000405072924"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/graph_indicator" />

                            <LinearLayout
                                android:id="@+id/R6"
                                android:layout_width="match_parent"

                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/black" />

                                <TextView
                                    android:id="@+id/ifsc"
                                    style="@style/lumpsumLeft"
                                    android:layout_weight="0.5"
                                    android:fontFamily="@font/lreg"
                                    android:text="IFSC CODE :"
                                    android:textColor="@color/venturanew"

                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/txt_ifsc_Val"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="2.5"
                                    android:fontFamily="@font/lreg"
                                    android:gravity="right"
                                    android:text="ICIC0000004"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/graph_indicator" />

                            <LinearLayout
                                android:id="@+id/R7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="5dp"
                                android:padding="5dp"
                                android:weightSum="3">

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/black" />

                                <TextView
                                    android:id="@+id/bank_name"
                                    style="@style/lumpsumLeft"
                                    android:layout_weight="0.5"
                                    android:fontFamily="@font/lreg"
                                    android:text="BANK NAME :"
                                    android:textColor="@color/venturanew"

                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/txtbank_name_Val"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="2.5"
                                    android:fontFamily="@font/lreg"
                                    android:gravity="right"
                                    android:text="ICICI BANK LTD"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />


                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/graph_indicator" />

                            <LinearLayout
                                android:id="@+id/R8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="5dp"
                                android:padding="5dp">

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/black" />

                                <TextView
                                    android:id="@+id/barnch_name"
                                    style="@style/lumpsumLeft"
                                    android:layout_weight="0.5"
                                    android:fontFamily="@font/lreg"
                                    android:text="BRANCH :"
                                    android:textColor="@color/venturanew"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/txtbranch_name_Val"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="2.5"
                                    android:fontFamily="@font/lreg"
                                    android:gravity="right"
                                    android:text="NARIMAN POINT"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linearpromo"
                                android:background="@drawable/rect"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_10"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="5dp"
                                    tools:context=".Activity">

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/catarena"
                                        android:gravity="left"
                                        android:text="Registration fee"
                                        android:textAllCaps="true"
                                        android:textColor="@color/venturanew"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:id="@+id/tx_actualfare"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/catarena"
                                        android:gravity="right"
                                        android:text="1233333"
                                        android:textColor="@color/green900"
                                        android:textSize="14dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="5dp"
                                    tools:context=".Activity">

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/black" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/catarena"
                                        android:gravity="left"
                                        android:text="Promocode"
                                        android:textAllCaps="true"
                                        android:textColor="@color/venturanew"
                                        android:textSize="14dp" />

                                    <TextView
                                        android:id="@+id/tx_discountfare"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/catarena"
                                        android:gravity="right"
                                        android:text="1211"
                                        android:textColor="@color/red"
                                        android:textSize="14dp" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/gray300" />

                                <TextView
                                    android:id="@+id/tx_finalfare"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:fontFamily="@font/lreg"
                                    android:gravity="right"
                                    android:text="@string/alreadyuserwhite"
                                    android:padding="8dp"
                                    android:textColor="@color/green600"
                                    android:textSize="14dp"
                                    android:visibility="visible" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <EditText
                                        android:id="@+id/et_promocode"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dimen_40"
                                        android:layout_gravity="center"
                                        android:layout_weight="1"
                                        android:textColor="@color/green900"
                                        android:background="@drawable/selector"
                                        android:fontFamily="@font/lreg"
                                        android:hint="Enter Promocode"
                                        android:textSize="15dp" />
                                </LinearLayout>


                                <TextView
                                    android:id="@+id/txt_apply"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="3"
                                    android:fontFamily="@font/lbold"
                                    android:gravity="center|right"
                                    android:text="APPLY"
                                    android:textAllCaps="true"
                                    android:textColor="@color/ventura_color"
                                    android:textSize="12dp"
                                    android:visibility="visible" />


                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/progress_bar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tx_promotext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/roundback"                                android:fontFamily="@font/opensans_regular"
                                android:gravity="left"
                                android:padding="8dp"
                                android:text="Promocodes applied successfully."
                                android:textColor="@color/green500"
                                android:textSize="13dp"
                                android:visibility="gone" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/buttondone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:text="Cancel Booking"
                        android:textColor="@color/white"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressbarcancel"
                style="@android:style/Widget.ProgressBar.Large.Inverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:clickable="false"
                android:indeterminate="true"
                android:padding="30dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imagebuscancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:clickable="false"
                android:visibility="gone" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearlayout_upipayment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="#F8F6F6"
        android:orientation="vertical"
        android:visibility="visible"
        tools:context=".Activity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:padding="5dp"
                android:text="One time Registration fee \n to become Partner Rs.2124/-"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkbox_gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20"
            android:fontFamily="@font/lreg"
            android:text="would you like to claim GST ?"></CheckBox>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/buttonRazorpay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"

            android:layout_marginRight="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@color/colour_new_button"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="30dp"
            fancy:fb_text="Pay Now"
            fancy:fb_textColor="#FFFFFF" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginBottom="10dp"

            android:layout_weight="1"
            android:background="@drawable/buttonback1"
            android:fontFamily="@font/opensans_light"
            android:textColor="@color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnTechprocess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_weight="0"
            android:background="@drawable/buttonback1"
            android:fontFamily="@font/opensans_light"
            android:text="Pay Now"
            android:textColor="@color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pay_later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_light"
            android:gravity="center"
            android:text="Pay Later"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:visibility="gone"

            />

    </LinearLayout>


</RelativeLayout>
