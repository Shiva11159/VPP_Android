                            android:drawableTint="@color/white"
                            android:fontFamily="@font/opensans_light"
                            android:gravity="center"
                            android:text="SUBMIT"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:visibility="visible" />

