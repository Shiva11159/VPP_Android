                                android:textSize="16sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <mehdi.sakout.fancybuttons.FancyButton
                            android:id="@+id/btn_submit_query"
                            android:layout_width="100dp"
                            android:layout_height="42dp"


