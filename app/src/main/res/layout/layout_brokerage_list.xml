<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/textview"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/opensans_light"
            android:gravity="left"
            android:textColor="@color/black"
            android:textSize="@dimen/material_size_12"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearAttendanceAdapter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/roundrectangle"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtmonthlyProspectName"
                style="@style/textview"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:textSize="15dp"
                android:fontFamily="@font/opensans_regular"
                android:gravity="left"
                android:text="@string/dashboard" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gray400"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtbrokerageDate"
                style="@style/textview"
                android:textSize="15dp"

                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_regular"
                android:gravity="right"
                android:text="@string/dashboard" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtbrokerageProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/dashboard"
            android:textColor="@color/gray800"
            android:textSize="10dp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"></View>
    </LinearLayout>
</LinearLayout>
