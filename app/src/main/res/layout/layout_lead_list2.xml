<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="@dimen/dimen_10"
    android:paddingRight="@dimen/dimen_10"
    android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_6"

        android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".9"
                android:text="Rs. 5,516 CrsRs. 5,516 CrsRs. 5,516 Crs"
                android:lines="1"
                android:textAllCaps="true"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:textAllCaps="true"
                android:text="Rs. 5,516 CrsRs. 5,516 CrsRs. 5,516 CrsRs. 5,516 Crs"

                android:lines="1"
                android:gravity="left"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txtMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".9"
                android:text="Rs. 5,516 CrsRs. 5,516 Crs"
                android:textAllCaps="true"
                android:lines="1"

                android:gravity="center"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txtStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".9"
                android:text="Rs. 5,516 CrsRs. 5,516 Crs"
                android:lines="1"
                android:textAllCaps="true"
                android:gravity="right"
                android:textColor="@color/btn_active"
                android:textSize="10dp" />

    </LinearLayout>

    <View
        android:id="@+id/child_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/silver"
        android:layout_marginTop="@dimen/dimen_6" />

</LinearLayout>