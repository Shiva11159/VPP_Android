<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnUploadSignature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundrectangle"
            android:text="Upload"></Button>

        <Button
            android:id="@+id/btnUploadSignatureClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundrectangle"

            android:text="Clear"></Button>

        <Button
            android:visibility="gone"
            android:id="@+id/btnUploadSignatureView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_round_rectangle_16"
            android:text="View"></Button>

    </LinearLayout>
    <TextView
        android:layout_below="@+id/line"
        android:id="@+id/text"
        android:padding="20dp"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/dimen_20dp"
        android:layout_width="match_parent"
        android:text="Please Sign Below.."
        android:layout_height="wrap_content"></TextView>
    <ImageView
        android:id="@+id/forgot_closeimage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:visibility="visible" />
    <LinearLayout
        android:layout_below="@+id/text"
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="visible"
        tools:context="com.signatureapp.MainActivity">

    </LinearLayout>


</RelativeLayout>
