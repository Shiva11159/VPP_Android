<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="25dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            card_view:srcCompat="@drawable/venturalogo" />

        <TextView
            android:id="@+id/txt_alert"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/opensans_light"
            android:gravity="center"
            android:text="We will send otp to given below Mobile and Email Id. \n Do you want to ?"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_20dp" />

        <TextView
            android:id="@+id/txt_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/opensans_light"
            android:gravity="center"
            android:text=""
            android:textColor="@color/colour_new_text"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/opensans_light"
            android:gravity="center"
            android:text=""

            android:textColor="@color/colour_new_text"
            android:textSize="15dp" />


        <RadioGroup
            android:id="@+id/indexationRd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/rd_group_border"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/RbtnChange"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:layout_marginRight="1dp"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:fontFamily="@font/opensans_light"
                android:gravity="center"
                android:text="Change"
                />

            <RadioButton
                android:id="@+id/RbtnContinue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:button="@null"
                android:fontFamily="@font/opensans_light"
                android:gravity="center"
                android:text="Continue" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rd_group_border"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/textViewChange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_widget_background"
                android:gravity="center"
                android:padding="10dp"
                android:text="Change" />

            <TextView
                android:id="@+id/textviewContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"

                android:background="@drawable/toggle_widget_background"
                android:gravity="center"
                android:padding="10dp"
                android:text="Continue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/spnrlayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="gone">

            <RadioGroup
                android:id="@+id/myRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Email Id"
                    android:textSize="15sp" />

                <RadioButton
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Mobile No"
                    android:textSize="15sp" />
            </RadioGroup>
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>